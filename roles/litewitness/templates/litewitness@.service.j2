[Unit]
Description=Witnessing of append-only transparency logs
Requires=sigsum-agent.service
After=sigsum-agent.service

[Service]
Type=simple
User=%i
StandardError=journal
ExecStart={{ litewitness_basedir }}/%i/.local/bin/litewitness-start
ExecReload=/bin/kill -SIGHUP $MAINPID
Restart=on-failure
RestartSec=1m

[Install]
WantedBy=multi-user.target
