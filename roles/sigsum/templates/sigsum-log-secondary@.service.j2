[Unit]
Description=Sigsum log secondary node
Requires=trillian-server.service
After=trillian-server.service

[Service]
Type=simple
User={{ sigsum_user }}
StandardError=journal
ExecStart=/usr/bin/sigsum-log-start.sh secondary {{ sigsum_url_prefix }} %i
Restart=on-failure

[Install]
WantedBy=multi-user.target
